<Window x:Class="booklibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:booklibrary"
        mc:Ignorable="d"
        Title="Book Library" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/book1.jpg"/>
        </Grid.Background>
        <Button Content="Librarian" HorizontalAlignment="Left" Margin="64,277,0,0" Command="{Binding LibrarianCommand}" VerticalAlignment="Top" Height="77" Width="212" Background="#FFF77124" BorderThickness="2,2,2,2" BorderBrush="Black" FontSize="24" FontWeight="Bold" Opacity="0.885"/>
        <Button Content="Student" HorizontalAlignment="Left"  Margin="59,55,0,294" Command="{Binding StudentCommand}" Height="85" Width="217" Background="#FFF77124" BorderThickness="2,2,2,2" BorderBrush="Black" FontSize="26" FontWeight="Bold" Opacity="0.89"/>
        



    </Grid>
</Window>
